<div class="group-container" ...attributes>
  <div class="label-container">
    <label class="group-label" for="{{@prefix}}-time">{{@label}}</label>
  </div>
  <div class="textfield-container">
    <input
      type="text"
      pattern="\d\d\:\d\d"
      title="mm:ss"
      placeholder="##:##"
      id="{{@prefix}}-time"
      class="time-input"
      value={{this.time}}
      {{on 'change' this.timeChanged}}
    />
  </div>
  <div class="error-container {{unless this.timeError 'hidden'}}">
    Time must be in mm:ss format.
  </div>
  <Slider
    @color={{@sliderColor}}
    @value={{this.timeInMillis}}
    @min={{0}}
    @max={{3600000}}
    @step={{30000}}
    @valueChanged={{this.timeInMillisChanged}}
  />
</div>